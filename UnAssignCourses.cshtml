@{
    ViewBag.Title = "UnAssignCourses";
}

<h2>Unassign All Courses</h2>

<hr /><br />


<form method="POST">
    <div class="col-sm-5">

    </div>
    <div class="col-sm-6" style="text-align: center">
        @if (ViewBag.Message != null)
        {
            <p style="font-size:20px;color:olivedrab">@ViewBag.Message</p>
        }
        <br />
        <br />
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" style="font-size: 24px" class="btn-danger col-xs-6" value="  Unassign   Courses  " data-confirm="Are you sure to UnAssign All Courses?" /><br/><br /><hr />
    </div><br />
    <br />
    <br />
</form>


@section scripts{
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/mobiscroll-2.9.5.full.min.js"></script>

    <script>
        $(document).ready(function () {
            jQuery('[data-confirm]').click(function (e) {
                if (!confirm(jQuery(this).attr("data-confirm"))) {
                    e.preventDefault();
                }
            });
        });
    </script>

}